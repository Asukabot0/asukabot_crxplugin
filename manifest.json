{
    "manifest_version": 2,
    "name": "asukabot_chat",
    "version": "1.0.0",
    "description": "Making bot sending message in telegram group",
    
    "icons":
    {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
   
    "background":
    {
        "page": "background.html"
    },


    "browser_action": 
    {
        "default_icon": "img/icon.png",
        "default_title": "asukabot_chat",
        "default_popup": "popup.html"
    },

"permissions":
    [
        "contextMenus", 
        "tabs", 
        "notifications", 
        "webRequest", 
        "webRequestBlocking",
        "storage", 
        "http://*/*", 
        "https://*/*" 
    ],
    "options_ui":
    {
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": true
    }

}